<h1>Listing appointments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Car</th>
      <th>Appointment date</th>
      <th>Workplace</th>
      <th>Service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.car_id %></td>
        <td><%= appointment.hour %></td>
        <td><%= appointment.workplace_id %></td>
        <td><% appointment.services.each do |service| %>
              <%= service.name %></br> 
              <% end %></td>
        <td><%= link_to 'Show', appointment, class: "btn btn-xs" %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-xs" %></td>
        <td><%= link_to 'Destroy', appointment,class: "btn btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path, class: "btn btn-small" %>
