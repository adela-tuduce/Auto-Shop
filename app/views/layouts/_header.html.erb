<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Auto Shop", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
 
            <% if current_user.try(:admin?) %> 
             <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
              <li><%= link_to "Add a new mechanic!", new_mechanic_path %></li>
              <li><%= link_to "Add a new client!", new_client_path %></li>
              <li><%= link_to "Add a new workplace!", new_workplace_path %></li>
              <li><%= link_to "Add a new service!", new_service_path %></li>
              <li class="divider"></li>
          </ul>
            <% end %>
            <% if user_signed_in? %> 
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
              <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", client_path(current_user) %></li>
                 <li><%= link_to "Add an appointment!", new_appointment_path(@client) %></li>
                <li class="divider"></li>
          </ul>
          <% else %>
            <li><%= link_to "Sign up", new_user_registration_path %></li> 
            <li><%= link_to "Sing in", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>